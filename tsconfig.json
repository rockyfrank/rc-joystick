{
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./stories/**/*.tsx",
    "./stories/**/*.ts",
    "./scripts/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "es", "lib"]
}
